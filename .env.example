# ==============================================
# TMDB RESTful API - Environment Configuration
# ==============================================

# Application Settings
# --------------------
# Environment: development, production, test
NODE_ENV=development

# Port number for the application (default: 8080)
PORT=8080

# Database Configuration
# ----------------------
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=tmdb_user
DATABASE_PASSWORD=tmdb_password
DATABASE_NAME=tmdb_db

# Redis Configuration
# -------------------
REDIS_HOST=redis
REDIS_PORT=6379

# TMDB API Configuration
# ----------------------
TMDB_API_KEY=9e4bff2ace3ecd26d36d3a662fb8b43b
TMDB_BASE_URL=https://api.themoviedb.org/3

# JWT Authentication
# ------------------
JWT_SECRET=top-secret
JWT_EXPIRATION=24h

# Data Synchronization
# --------------------
# Enable/disable automatic data sync from TMDB
SYNC_ENABLED=true
# Sync interval in milliseconds (86400000 = 24 hours)
SYNC_INTERVAL=86400000
